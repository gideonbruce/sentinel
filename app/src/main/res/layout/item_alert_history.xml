<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_alert_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EMERGENCY"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete alert"
                android:tint="#757575" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Oct 28, 2025 at 02:30 PM"
            android:textSize="14sp"
            android:textColor="#616161" />

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Contact Name â€¢ +1234567890"
            android:textSize="14sp"
            android:textColor="#424242"
            android:drawablePadding="8dp"
            android:drawableStart="@android:drawable/ic_menu_call" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="55.732456, 12.345678"
                android:textSize="14sp"
                android:textColor="#424242"
                android:drawablePadding="8dp"
                android:drawableStart="@android:drawable/ic_dialog_map"
                android:ellipsize="end"
                android:maxLines="1" />

            <ImageButton
                android:id="@+id/btn_view_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_dialog_map"
                android:contentDescription="View on map"
                android:tint="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>